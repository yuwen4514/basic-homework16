#include <stdio.h> 
#include <stdlib.h>
#include <string.h>

int main()

{

    char num[10][3]={"零","壹","貳","參","肆","伍","陸","柒","捌","玖"};

    char ch[3][3]={"仟","佰","拾"};

    char wan[3][3]={"兆","億","萬"};

    int z, o, t, th, fo, fi, s=0, e=0;

    char n[20];
    
    printf("請輸入一串阿拉伯數字(此數需要小於16位數)：" );

    scanf("%s",n); 

    t = strlen(n);

    if (t>16)  

    {
            printf("此整數長度超過16位數, 無法轉換...\n");
            exit(0);
    }

    th=(t-1)/4+1;

    printf("轉換後的結果：");

    for(z=0;z<th;z++)

    {

                e=0;

                if (z==0) fo=(4-t%4)%4;

                else fo=0;

                for (o=fo;o<4;o++)

                {
                    fi=n[s++]-48;

                    if(fi==0) continue; 

                    printf("%s",num[fi]);

                    if(o!=3) 

                    printf("%s",ch[o]);

                    e=1;
                }

                    if (th!=1 && z!=th-1 && e!=0)

                        {
                            printf("%s",wan[4-th+z]);
                        }

    }

printf("\n");
system("pause");
return 0;

}
